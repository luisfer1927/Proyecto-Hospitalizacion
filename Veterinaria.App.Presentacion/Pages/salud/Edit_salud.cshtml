}
<h2>Editando el estado de salud:@Model.estadodeSalud.id</h2>
<form method="post">
    <input type="hidden" asp-for="estadodeSalud.id"/>
    
    <div>
        <label asp-for="estadodeSalud.temperatura"></label>
        <input asp-for="estadodeSalud.temperatura" class="form-control"/>
