    </div>
    <div>
        <label asp-for="estadodeSalud.Frecu_Respi"></label>
        <input asp-for="estadodeSalud.Frecu_Respi" class="form-control"/>
        <span class="textdanger" asp-validation-for="estadodeSalud.Frecu_Respi"></span>
    </div>
    <div>
        <label asp-for="estadodeSalud.Frecu_Cardia"></label>
        <input asp-for="estadodeSalud.Frecu_Cardia" class="form-control"/>
        <span class="textdanger" asp-validation-for="estadodeSalud.Frecu_Cardia"></span>
    </div>
    <div>
        <label asp-for="estadodeSalud.Estado_Animo"></label>
        <input asp-for="estadodeSalud.Estado_Animo" class="form-control"/>
        <span class="textdanger" asp-validation-for="estadodeSalud.Estado_Animo"></span>
    </div>
    <div>
        <label asp-for="estadodeSalud.recomendacion"></label>
        <input asp-for="estadodeSalud.recomendacion" class="form-control"/>
        <span class="textdanger" asp-validation-for="estadodeSalud.recomendacion"></span>
    </div>
    <div>
        <label asp-for="estadodeSalud.Peso"></label>
        <input asp-for="estadodeSalud.Peso" class="form-control"/>
        <span class="textdanger" asp-validation-for="estadodeSalud.Peso"></span>
    </div>
    <div>
        <label asp-for="estadodeSalud.masco_estadosalud"></label>
        <input asp-for="estadodeSalud.masco_estadosalud" class="form-control"/>
        <span class="textdanger" asp-validation-for="estadodeSalud.masco_estadosalud"></span>
    </div>
    <div>
        <label asp-for="estadodeSalud.visit"></label>
        <input asp-for="estadodeSalud.visit" class="form-control"/>
        <span class="textdanger" asp-validation-for="estadodeSalud.visit"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
